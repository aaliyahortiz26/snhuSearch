*@
@{
}
<title>Change Password</title>
<link href='~/css/ChangePassword.css' rel='stylesheet'>

<form asp-action="ChangePassword" method="post" autocomplete="off">
    <div class="centerDisplay">
        <p class="displayInstructions">
            Enter your old password first in order to change your password
        </p>
        <input class="userOldPassword" type="password" id="oldPassword" asp-for="userOldPassword" placeholder="Old Password" required />
        <br />
        <input class="userNewPassword" type="password" id="newPassword" asp-for="userNewPassword" placeholder="New Password" required />
        <br />
        <input class="userConfirmNewPassword" type="password" id="confirmNewPassword" asp-for="userConfirmNewPassword" placeholder="Verify New Password" required autocomplete="off" /><br />
        <span asp-validation-for="userConfirmNewPassword" class="text-danger"></span>
        <br />
        <button class="submitNewPassword" type="submit">Submit</button>
    </div>
 </form>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
    window.onload = function () {
        alert("@ViewBag.Message");
    };
    </script>
}
