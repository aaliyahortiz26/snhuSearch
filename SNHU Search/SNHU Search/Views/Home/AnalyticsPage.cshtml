@using Newtonsoft.Json

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Profile Page</title>
    <link href='~/css/AnalyticsPage.css' rel='stylesheet'>

    <style type="text/css">
        .chartBox {
            width: 800px;
            margin: auto;
            border: 3px solid green;
            padding: 10px;
        }
    </style>
</head>

<body>
    <div class="chartBox">
        <canvas id="myChart"></canvas>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    @{
        string jsonConv = JsonConvert.SerializeObject(ViewBag.Words);
    }

    <script>
        var temp = @(Html.Raw(jsonConv));
        const ctx = document.getElementById('myChart').getContext('2d');
        const myChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: [@ViewBag.Words[0], @ViewBag.Words[1], @ViewBag.Words[2], @ViewBag.Words[3], @ViewBag.Words[4], @ViewBag.Words[5]],
                datasets: [{
                    label: 'Most searched words',
                    data: [@ViewBag.Counts[0], @ViewBag.Counts[1], @ViewBag.Counts[2], @ViewBag.Counts[3], @ViewBag.Counts[4], @ViewBag.Counts[5]],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 2
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>

</body>