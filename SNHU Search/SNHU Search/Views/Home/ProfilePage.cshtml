@model SNHU_Search.Models.ProfileModel

<head>
    <title>Profile Page</title>
    <link href='~/css/ProfilePage.css' rel='stylesheet'>
    <link rel="icon" href="~/favicon.ico"/>
</head>

<form id="formid" asp-action="ProfilePage" method="post" autocomplete="off">
    <div class="profleCenter">
        <div class="profilePictureDiv">
            <input type="file" accept="image/*" name="image" id="file" onchange="loadFile(event)" asp-for="ProfileImageData" style="display: none;">
            <label for="file" style="cursor: pointer;">Edit Profile Image</label>
            <img id="output" width="200" height="200" />
        </div>
        <div class="leftColumn">
            <label>First Name: </label><br />
            <label>Last Name: </label><br />
            <label>Username: </label><br />
            <label>Email: </label><br />
        </div>
        <div class="rightColumn">
            @{
                List<string> currentUserInformation = new List<string>();
                currentUserInformation = ViewData["userProfileData"] as List<string>;

                string username;
                username = ViewData["userName"] as string;

                <label>@currentUserInformation[1]</label><br /> @*User's First Name*@
                <label>@currentUserInformation[2]</label><br /> @*User's Last Name*@
                <label>@username</label><br /> @*User's Username*@
                <label>@currentUserInformation[0]</label><br /> @*User's Email*@
            }
        </div>
    </div>
    <button class="changePasswordButton buttonCenter" type="button" onclick=" location.href = '@Url.Action("ChangePassword", "Home")'">Change Password</button>
</form>
<script>
    var loadFile = function (event) {
        var image = document.getElementById('output');
        image.src = URL.createObjectURL(event.target.files[0]);
    };
    function submitForm() {
        document.getElementById('formid').submit();
    }
</script>